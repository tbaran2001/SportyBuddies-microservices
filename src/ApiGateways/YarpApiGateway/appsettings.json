{
  "ConnectionStrings": {
    "Database": "Server=localhost;Database=IdentityDb;User Id=sa;Password=Password123!;Encrypt=False;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "sport-route": {
        "ClusterId": "sport-cluster",
        "Match": {
          "Path": "/sport-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "matching-route": {
        "ClusterId": "matching-cluster",
        "Match": {
          "Path": "/matching-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "profilemanagement-route": {
        "ClusterId": "profilemanagement-cluster",
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/profilemanagement-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "sport-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://sport.api:8080/"
          }
        }
      },
      "matching-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://matching.api:8080/"
          }
        }
      },
      "profilemanagement-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://profilemanagement.api:8080/"
          }
        }
      }
    }
  }
}